# Danh sách để lưu các công việc
tasks = []

def add_task(task_name):
    """Thêm một công việc mới vào danh sách với trạng thái chưa hoàn thành."""
    tasks.append({'name': task_name, 'completed': False})
    print(f"Đã thêm công việc: '{task_name}'")

def list_tasks():
    """Liệt kê tất cả công việc với trạng thái hoàn thành."""
    if not tasks:
        print("Danh sách công việc đang trống.")
    else:
        print("Danh sách công việc hiện có:")
        for idx, t in enumerate(tasks, 1):
            status = "[x]" if t['completed'] else "[ ]"
            print(f"{idx}. {status} {t['name']}")

def complete_task(task_index):
    """Đánh dấu công việc theo index là đã hoàn thành."""
    if 0 <= task_index < len(tasks):
        tasks[task_index]['completed'] = True
        print(f"Công việc '{tasks[task_index]['name']}' đã được đánh dấu là hoàn thành.")
    else:
        print("Chỉ số công việc không hợp lệ.")

# --- Điểm bắt đầu của chương trình ---
if __name__ == "__main__":
    print("Chào mừng đến với ứng dụng To-Do List!")
    
    # Thêm ví dụ công việc
    add_task("Học bài Git và GitHub")
    add_task("Làm bài tập thực hành ở nhà")
    
    # Liệt kê tất cả công việc
    list_tasks()
    
    # Đánh dấu công việc đầu tiên là hoàn thành
    complete_task(0)
    
    # Liệt kê lại để thấy trạng thái
    list_tasks()

def delete_task(task_index):
    """Xóa công việc theo index khỏi danh sách."""
    if 0 <= task_index < len(tasks):
        removed_task = tasks.pop(task_index)
        print(f"Công việc '{removed_task['name']}' đã bị xóa.")
    else:
        print("Chỉ số công việc không hợp lệ.")
